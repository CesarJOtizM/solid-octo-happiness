{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "./dist",
    "removeComments": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "paths": {
      "src/*": ["*"],
      "types/*": ["types"],
      "utils": ["utils"],
      "utils/*": ["utils"],
      "services/*": ["services"],
      "controllers/*": ["controllers"],
      "middleware/*": ["middleware"],
      "routes/*": ["routes"],
      "config/*": ["config"],
      "schemas/*": ["schemas"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tests", "**/*.test.ts", "**/*.spec.ts"]
}
